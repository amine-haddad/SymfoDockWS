<li{{ attributes }} class="nav-item dropdown">
    <a
        class="nav-link dropdown-toggle"
        href="#" role="button"
        data-bs-toggle="dropdown" 
        aria-expanded="false">
            Categories
    </a>
    <ul class="dropdown-menu">
        {% for cat in this.categories %}
            <li>
                <a class="dropdown-item" href="{{ path('category_show', {'slug': cat.slug}) }}">
                    {{ cat.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
</li>
