    {# Tableau listant tous les programmes #}
    <h2>All Programs</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for prog in program %}
                <tr>
                    <td>{{ prog.title }}</td>
                    <td>
                    <a href="{{ path('program_edit', {'slug': prog.slug}) }}" class="btn btn-sm btn-primary">Edit</a>
                       
                    <a href="{{ path('program_show', {'slug': prog.slug}) }}" class="btn btn-sm btn-info">Show</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

